<div id="uploadImage" class="text-center pt-5" >
  <h1 class="display-4 text-light">Upload Image</h1>
  <form action="/upload"
        class="dropzone container mt-5"
        id="my-awesome-dropzone"></form>
</div>
<div id="myCarousel" class="carousel d-none slide" data-ride="">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "tng_final.png", :class => "first-slide", :width => "588" %>
      <div class="container">
        <div class="carousel-caption text-center">
          <h1>Picard</h1>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "ds9_final.png", :class => "first-slide", :width => "688" %>
      <div class="container">
        <div class="carousel-caption text-center">
          <h1>Sisko</h1>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "tos_final.png", :class => "first-slide", :width => "775" %>
      <div class="container">
        <div class="carousel-caption text-center">
          <h1>Kirk</h1>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "voy_final.png", :class => "first-slide", :width => "500" %>
      <div class="container">
        <div class="carousel-caption text-center">
          <h1>Janeway</h1>
        </div>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

